<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="VMT_ITV.LogWindow"
	x:Name="Window"
	Title="LogWin"
	Width="600" Height="380" WindowStartupLocation="CenterOwner" Closing="Window_Closing">

	<Grid x:Name="LayoutRoot">
		<Grid Background="#FFE5E5E5">
    			<TextBlock x:Name="Label_Log" HorizontalAlignment="Left" Margin="8,23.04,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53"><Run Language="ko-kr" Text="Log"/></TextBlock>
    			<TextBox x:Name="TB_Log" Margin="8,50,8,8" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="14.667"/>
    	</Grid>
	</Grid>
</Window>